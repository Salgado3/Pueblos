<%- include('partials/header') -%>
<link rel="stylesheet" href="/css/app.css" />

<div class="row justify-content-center mt-5">
  <!-- <div class="container col-6 mt-5"></div> -->
  <div class="col-6">
    <a class="btn btn-primary btn-lg" href="/profile">Return to Profile</a>
    <a class="btn btn-primary btn-lg" href="/feed">Return to Search</a>

    <h2 class="puebloPost">Pueblo: <%= post.title%></h2>
    <h3 class="puebloPost">Airport: <%=post.airportId%></h3>
    <a href="<%=post.photoByUrl%>" target="_blank">
      <h3 class="puebloPost">Photo by: <%=post.photoBy %></h3>
    </a>
    <div class="postImgDiv">
    <img class="img-fluid" src="<%= post.image%>" />
  </div>
    <div class="row justify-content-between">
      <div>
        <a
          class="descriptionLearnMore"
          href="<%=post.descriptionUrl%>"
          target="_blank"
        >
          <h2 class="puebloPost"><%= post.description %></h2>
        </a>
        <!-- <div class="descriptionLearnMore__overlay"></div> -->
      </div>
      <form
        class="col-1"
        action="/post/likePost/<%= post.id %>?_method=PUT"
        method="POST"
      >
        <button class="btn btn-primary fa fa-heart" type="submit"></button>
      </form>
      <!-- delete button view  -->
      <%if(user.bookmark.includes(post._id)){ %>
      <form
        action="/post/deletePost/<%= post.id %>?_method=DELETE"
        method="POST"
        class="col-3"
      >
        <button class="btn btn-primary fa fa-trash" type="submit"></button>
      </form>
      <%}%>
    </div>

    <div class="col-3 mt-5">
      <p><%= post.caption %></p>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
